
@model Department
@{
    Layout = "_LayoutAdmin";
    string ProvincessID = " ";
    ViewBag.PRO = ProvincessID;
  
}

<h1>Medical Practices</h1>

<form method="post" asp-controller="Department" asp-action="Edit">
    <div asp-validation-summary="All" class="text-danger"> </div>

    <div class="form-group row">
        <div class="col-sm-9">
            <label>Department Name :</label>
            <div class="col-sm-7">
                <input asp-for="DepartmentName" class="form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="DepartmentName"
                      class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group row" hidden="hidden">
        <div class="col-sm-9">
            <label>DeptID :</label>
            <div class="col-sm-7">
                <input asp-for="DeptID" class="form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="DeptID"
                      class="text-danger"></span>
            </div>
        </div>
    </div>



    <div class="form-group row">
        <div class="col-sm-9">
            <label>Description :</label>
            <div class="col-sm-7">
                <input type="text" asp-for="Description" class="form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="Description"
                      class="text-danger"></span>
            </div>
        </div>
    </div>





    <div class="col-sm-2 align-content-end">
        <button type="submit" class="btn btn-primary text-capitalize">
            Save
        </button>

        <button class="btn btn-primary text-capitalize" asp-controller="Department" asp-action="Index">
            Cancel
        </button>
    </div>
</form>

