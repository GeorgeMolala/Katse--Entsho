@model RegisterCredentials

@{
    ViewBag.Title = "Register";
}

<h1>Register</h1>

<div asp-validation-summary= "All" class="text-danger"> </div>
    <form method="post" asp-controller="Employees" asp-action="RegisterCredentials">

        <div class="form-group row align-content-center LogInCredentials">
           <div class="col-sm-9">
            <div class="col-sm-7">
                <label>UserName: </label>
                <input asp-for="UserName" class="form-control"/>
            </div>
         </div>
        </div>

        <div class="col">
            <span asp-validation-for="UserName" class="text-danger">

            </span>
        </div>

        <div class="form-group row">
            <div class="col-sm-9">
             <div class="col-sm-7">
                 <label>Password: </label>
                <input type="password" asp-for="Password" class="form-control"/>
            </div>
             </div>
            <div class="col">
            <span asp-validation-for="Password" class="text-danger">

            </span>
             </div>
        </div>

        <div class="form-group row">
             <div class="col-sm-9"> 
             <div class="col-sm-7">
                 <label>Confirm Password: </label>
                <input type="password" asp-for="ConfirmPassword" class="form-control"/>
            </div>
            </div>

            <div class="col">
            <span asp-validation-for="ConfirmPassword" class="text-danger">

            </span>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4"> 
                <button type="submit" class="btn btn-danger" >Register</button> 
                <button asp-controller="Account" asp-action="Login" class="btn btn-danger">Cancel</button>
            </div>
        </div>
     

    </form>



