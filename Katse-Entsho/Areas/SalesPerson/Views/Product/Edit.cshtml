
@model Product
@{
    Layout = "_LayoutSales";
  
}

<div class="illus-group-col">
    <h1 class="headline center"><span class="background_Matte">Product Management </span></h1>
    <h3 class="title">
        Administrator
    </h3>
    <br />


</div>



<form method="post" enctype="multipart/form-data" asp-controller="Product" asp-action="Edit">
    <div asp-validation-summary="All" class="text-danger"> </div>

    <div class="form-group row">
        <div class="col-sm-9">
            <label>Department Name :</label>
            <div class="col-sm-7">
                <input asp-for="Name" data-toggle="tooltip" data-placement="top" title="Type department Name" placeholder="Department Name" form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="Name"
                      class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-9">
            <label>Description </label>
            <div class="col-sm-7">
                <input asp-for="Description" data-toggle="tooltip" data-placement="top" title="Type department Name" placeholder="Department Name" form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="Description"
                      class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-9">
            <label>Barcode </label>
            <div class="col-sm-7">
                <input asp-for="BarCode" data-toggle="tooltip" data-placement="top" title="Type department Name" placeholder="Department Name" form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="BarCode"
                      class="text-danger"></span>
            </div>
        </div>
    </div>


    <div class="form-group row">
        <div class="col-sm-9">

            <div class="col-sm-7">
                <label>Category </label>
                <select asp-for="CatID" asp-items="@(new SelectList(ViewBag.Categories, "CatID", "CategoryName"))" class="form-control" data-toggle="tooltip" data-placement="top" title="Assign Employee to Department" placeholder="Employee Department">
                </select>
            </div>
            <div class="col">
                <span asp-validation-for="CatID"
                      class="text-danger"></span>
            </div>
        </div>
    </div>


    <div class="form-group row">
        <div class="col-sm-9">
            <div class="col-sm-7">
                <label asp-for="Picture"  >Choose File</label>
                <input asp-for="Picture" type="file" class="form-control" />

            </div>
            <div class="col">
                <span asp-validation-for="Picture"
                      class="text-danger"></span>
            </div>
        </div>
    </div>



    <div class="form-group row">
        <div class="col-sm-9">

            <div class="col-sm-7">
                <label>Supplier </label>
                <select asp-for="SuppID" asp-items="@(new SelectList(ViewBag.Suppliers, "SuppID", "SupplierName"))" class="form-control" data-toggle="tooltip" data-placement="top" title="Assign Employee to Department" placeholder="Employee Department">
                </select>
            </div>
            <div class="col">
                <span asp-validation-for="SuppID"
                      class="text-danger"></span>
            </div>
        </div>
    </div>


    <div class="form-group row">
        <div class="col-sm-9">
            <label>Price</label>
            <div class="col-sm-7">
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="Price"
                      class="text-danger"></span>
            </div>
        </div>
    </div>




    <div class="form-group row" hidden="hidden">
        <div class="col-sm-9">
            <label>ProductID :</label>
            <div class="col-sm-7">
                <input asp-for="ProductID" class="form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="ProductID"
                      class="text-danger"></span>
            </div>
        </div>
    </div>









    <div class="col-sm-2 align-content-end">
        <button type="submit" class="btn btn-primary text-capitalize">
            Save
        </button>

        <button class="btn btn-primary text-capitalize" asp-controller="Department" asp-action="Index">
            Cancel
        </button>
    </div>
</form>


